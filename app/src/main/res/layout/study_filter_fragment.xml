<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.example.heysrealprojcet.ui.main.content.study.filter.StudyFilterViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="23dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:src="@drawable/ic_close" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="9dp"
                        android:text="맞춤 필터"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{(v) -> vm.onClickInit()}"
                        android:layout_marginRight="9dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="재설정" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관심 분야"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="최대 3개까지 선택이 가능해요." />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="planning"
                        android:text="기획"
                        android:textColor="@drawable/bg_filter_interest_button"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="design"
                        android:text="디자인"
                        android:textColor="@drawable/bg_filter_interest_button"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="it"
                        android:text="개발"
                        android:textColor="@drawable/bg_filter_interest_button"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="economics"
                        android:text="금융/경제"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_interest_button" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="data"
                        android:text="데이터/인공지능"
                        android:textColor="@drawable/bg_filter_interest_button"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="language"
                        android:text="언어"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_interest_button" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="education"
                        android:text="인사/교육"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_interest_button" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="public"
                        android:text="공공/복지"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_interest_button" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="business"
                        android:text="경영/비지니스"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_interest_button" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="marketing"
                        android:text="광고/마케팅"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_interest_button" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="engineering"
                        android:text="엔진니어링/설계"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_interest_button" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_filter_interest_button"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:onClick="@{(v) -> vm.onClickInterest(v)}"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="6.5dp"
                        android:tag="mediaContents"
                        android:text="미디어 콘텐츠/전시"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_interest_button" />

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_filter_interest_button"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:onClick="@{(v) -> vm.onClickInterest(v)}"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="6.5dp"
                    android:tag="etc"
                    android:text="기타"
                    android:textSize="16sp"
                    android:textColor="@drawable/bg_filter_interest_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/black"
                    android:text="활동 형태"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_filter_activity_button"
                    android:onClick="@{(v) -> vm.onClickActivity(v)}"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="32dp"
                    android:paddingVertical="18dp"
                    android:tag="online/offline"
                    android:text="온·오프라인"
                    android:textSize="16sp"
                    android:textColor="@drawable/bg_filter_activity_button" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_filter_activity_button"
                    android:onClick="@{(v) -> vm.onClickActivity(v)}"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="32dp"
                    android:paddingVertical="18dp"
                    android:tag="offline"
                    android:text="오프라인"
                    android:textSize="16sp"
                    android:textColor="@drawable/bg_filter_activity_button" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_filter_activity_button"
                    android:onClick="@{(v) -> vm.onClickActivity(v)}"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="32dp"
                    android:paddingVertical="18dp"
                    android:tag="online"
                    android:text="온라인"
                    android:textSize="16sp"
                    android:textColor="@drawable/bg_filter_activity_button" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_filter_region_button"
                    android:onClick="@{(v) -> vm.onClickRegion(v)}"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="32dp"
                    android:paddingVertical="18dp"
                    android:tag="whole"
                    android:text="전국"
                    android:textSize="16sp"
                    android:textColor="@drawable/bg_filter_region_button" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="32dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:background="@drawable/bg_filter_region_button"
                        android:onClick="@{(v) -> vm.onClickRegion(v)}"
                        android:tag="seoul"
                        android:text="서울시"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_region_button" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:background="@drawable/bg_filter_region_button"
                        android:onClick="@{(v) -> vm.onClickRegion(v)}"
                        android:tag="gyeonggi"
                        android:text="경기도"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_region_button" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="32dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:background="@drawable/bg_filter_region_button"
                        android:onClick="@{(v) -> vm.onClickRegion(v)}"
                        android:tag="incheon"
                        android:text="인천시"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_region_button" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:background="@drawable/bg_filter_region_button"
                        android:onClick="@{(v) -> vm.onClickRegion(v)}"
                        android:tag="gangwon"
                        android:text="강원도"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_region_button" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="32dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="9dp"
                        android:paddingVertical="18dp"
                        android:background="@drawable/bg_filter_region_button"
                        android:onClick="@{(v) -> vm.onClickRegion(v)}"
                        android:tag="chungcheong"
                        android:text="충청도"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_region_button" />

                    <Button
                        android:id="@+id/btnBoth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:background="@drawable/bg_filter_region_button"
                        android:onClick="@{(v) -> vm.onClickRegion(v)}"
                        android:tag="jeolla"
                        android:text="전라도"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_region_button" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="32dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:background="@drawable/bg_filter_region_button"
                        android:onClick="@{(v) -> vm.onClickRegion(v)}"
                        android:tag="gyeongsang"
                        android:text="경상도"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_region_button" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:background="@drawable/bg_filter_region_button"
                        android:onClick="@{(v) -> vm.onClickRegion(v)}"
                        android:tag="Jeju"
                        android:text="제주시"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_filter_region_button" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="32dp"
                    android:text="활동 목적"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="32dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:background="@drawable/bg_studyfilter_purpose_button"
                        android:onClick="@{(v) -> vm.onClickPurpose(v)}"
                        android:tag="capability"
                        android:text="역량강화"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_studyfilter_purpose_button" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_studyfilter_purpose_button"
                        android:onClick="@{(v) -> vm.onClickPurpose(v)}"
                        android:paddingVertical="18dp"
                        android:tag="skill"
                        android:text="실력향상"
                        android:textColor="@drawable/bg_studyfilter_purpose_button"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="46dp"
                    android:layout_marginHorizontal="32dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:background="@drawable/bg_studyfilter_purpose_button"
                        android:onClick="@{(v) -> vm.onClickPurpose(v)}"
                        android:tag="experience"
                        android:text="창업/협업 경험"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_studyfilter_purpose_button" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingVertical="18dp"
                        android:background="@drawable/bg_studyfilter_purpose_button"
                        android:onClick="@{(v) -> vm.onClickPurpose(v)}"
                        android:tag="portfolio"
                        android:text="포트폴리오"
                        android:textSize="16sp"
                        android:textColor="@drawable/bg_studyfilter_purpose_button" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="14dp"
            android:paddingVertical="16dp"
            android:background="@drawable/bg_filter_apply_button"
            android:text="적용하기"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>
</layout>