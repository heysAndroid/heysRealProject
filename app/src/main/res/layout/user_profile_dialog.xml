<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_f0f1f4_radius_12"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_introduce"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="40dp"
                            android:text="아직 소개할 내용이 없어요."
                            android:textAlignment="center"
                            android:textColor="@color/color_828282"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="32dp"
                        android:layout_height="53dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="77dp"
                        android:src="@drawable/ic_profile_sample" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="박보영"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_mbti"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_mypage_mbti"
                    android:gravity="center"
                    android:text="\????"
                    android:textColor="@drawable/text_mypage_mbti" />

                <TextView
                    android:id="@+id/tv_interest_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="관심분야/ 직무"
                    android:textColor="@color/color_828282"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_interest_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="#기획 #데이터/인공지능 #UX,IT"
                    android:textColor="@color/color_262626"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_job_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="직업"
                    android:textColor="@color/color_828282"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_job_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아직 소개할 직업이 없어요."
                    android:textColor="@color/color_262626"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_skill_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="사용가능한 스킬"
                    android:textColor="@color/color_828282"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_skill_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아직 소개할 스킬이 없어요."
                    android:textColor="@color/color_262626"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="30dp"
                    android:paddingBottom="40dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_kakao_unchecked" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_behance_unchecked" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_instagram_unchecked" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_github_unchecked" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_clip_unchecked" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="54dp"
            android:src="@drawable/ic_close_white" />
    </LinearLayout>
</layout>
