<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="com.example.heysrealprojcet.ui.channel.HeysChannelFreeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:background="@color/white"
            android:src="@drawable/ic_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginHorizontal="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="헤이즈 채널을 소개해주세요."/>


            <EditText
                android:id="@+id/edt_introduce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:background="@drawable/bg_channel_edittext"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:hint="아래 예시를 참고해서 헤이즈 채널에 대해 자유롭게 소개해보세요! \n \n채널 내용(선택)\n팀원 자격(선택)\n참여자에게 기대하는 역량(선택)\n채널에 대해 궁금한 점들은 리더 프로필에서 직접 문의해주세요!(필수) "
                android:text="@={vm.edtText}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="16dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/letterCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_99828282"
                    android:textSize="12sp"
                    android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_99828282"
                    android:textSize="12sp"
                    android:text="/1500"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginHorizontal="24dp"
            android:enabled="@{vm.isEnabled}"
            android:background="@drawable/bg_e1_radius_8"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="미리보기"/>
    </LinearLayout>
</layout>