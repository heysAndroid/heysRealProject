<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24.24dp"
        android:layout_marginTop="64.5dp"
        android:text="승인 요청을 취소하시겠어요?"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_spinner"
        android:overlapAnchor="false"
        android:spinnerMode="dropdown"
        android:tooltipText="kkkk" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_edittext"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="300dp"
        android:text="확인해주세요."
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24.25dp"
        android:layout_marginTop="10dp"
        android:text="승인 요청을 취소하면 채널 리더에게 알림이 가요. 상대의 기분을 상하게 하는 욕설과 비하발언 등은 신고의 대상이 될 수 있어요."
        android:textColor="@color/color_828282"
        android:textSize="12sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bg_ok_button"
        android:text="요청 취소하기"
        android:textSize="16sp" />
</LinearLayout>