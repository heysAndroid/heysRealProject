                android:minWidth="0dp"
                android:minHeight="0dp"
                android:onClick="@{(v) -> vm.onClickInterest(v)}"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:tag="economics"
                android:text="금융/경제"
