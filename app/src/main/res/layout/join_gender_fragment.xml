<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.example.heysrealprojcet.ui.join.gender.JoinGenderViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back_53c740" />

            <TextView
                android:id="@+id/description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="성별을 알려주세요"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="나를 제일 잘 표현할 수 있는 성별을 선택해주세요."
                android:textColor="@color/color_828282"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/male"
                    android:layout_width="104dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_gender_male"
                    android:onClick="@{(v) -> vm.onClickGender(v)}"
                    android:tag="male" />

                <Button
                    android:id="@+id/female"
                    android:layout_width="104dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_gender_female"
                    android:onClick="@{(v) -> vm.onClickGender(v)}"
                    android:tag="female" />

                <Button
                    android:id="@+id/nonBinary"
                    android:layout_width="104dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_gender_nonbinary"
                    android:onClick="@{(v) -> vm.onClickGender(v)}"
                    android:tag="nonBinary" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ok_button"
            android:paddingVertical="20dp"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</layout>